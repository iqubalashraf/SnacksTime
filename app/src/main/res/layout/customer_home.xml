<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="college.app.projectcollege.SplashScreenCustomer">

    <TextView
        android:id="@+id/userNameAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="20sp"
        android:background="@drawable/edit_text_rounded"
        android:textColor="#000000"
        android:text="Hello World!" />
    <LinearLayout
        android:id="@+id/layoutDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/userNameAmount"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="50dp"
            android:textStyle="bold"
            android:textColor="#FF0000"
            android:textSize="19sp"
            android:text="Item"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="80dp"
            android:textStyle="bold"
            android:textColor="#FF0000"
            android:textSize="19sp"
            android:text="Price"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="30dp"
            android:textStyle="bold"
            android:textColor="#FF0000"
            android:textSize="19sp"
            android:text="Quantity"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutDisplay"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:visibility="gone">
        <TextView
            android:id="@+id/item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="35dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="22sp"
            android:text="Samosa:  "/>
        <TextView
            android:id="@+id/price1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="0dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="22sp"
            android:text="5"/>
        <EditText
            android:id="@+id/amount1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:maxLength="1"
            android:background="@drawable/edit_text_rounded" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout1"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:visibility="gone">
        <TextView
            android:id="@+id/item2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="35dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="22sp"
            android:text="Samosa:  "/>
        <TextView
            android:id="@+id/price2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="0dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="22sp"
            android:text="5"/>
        <EditText
            android:id="@+id/amount2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:maxLength="1"
            android:background="@drawable/edit_text_rounded" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout2"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:visibility="gone">
        <TextView
            android:id="@+id/item3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="35dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="22sp"
            android:text="Samosa:  "/>
        <TextView
            android:id="@+id/price3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="0dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="22sp"
            android:text="5"/>
        <EditText
            android:id="@+id/amount3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:maxLength="1"
            android:background="@drawable/edit_text_rounded" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout3"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:visibility="gone">
        <TextView
            android:id="@+id/item4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="35dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="22sp"
            android:text="Samosa:  "/>
        <TextView
            android:id="@+id/price4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="0dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="22sp"
            android:text="5"/>
        <EditText
            android:id="@+id/amount4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:maxLength="1"
            android:background="@drawable/edit_text_rounded" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout4"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:visibility="gone">
        <TextView
            android:id="@+id/item5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="35dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="22sp"
            android:text="Samosa:  "/>
        <TextView
            android:id="@+id/price5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="0dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="22sp"
            android:text="5"/>
        <EditText
            android:id="@+id/amount5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:maxLength="1"
            android:background="@drawable/edit_text_rounded" />
    </LinearLayout>
    <Button
        android:id="@+id/orderSubmit"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Order"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:background="@drawable/buttons"
        android:layout_below="@id/layout5"
        android:layout_marginTop="18dp"
        android:onClick="placeOrder"/>
    <Button
        android:layout_below="@id/orderSubmit"
        android:layout_marginTop="30dp"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:textSize="22sp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:text="logout"
        android:background="@drawable/buttons"
        android:onClick="sendToMainActivity"/>
</RelativeLayout>
